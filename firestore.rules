rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ✅ Public products catalog (READ-ONLY)
    match /products/{productId} {
      allow read: if true;
      allow write: if false; // Явный запрет записи
    }

    // ✅ User specific data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Cart items
      match /cart/{cartItemId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // ✅ Orders (Root collection)
    match /orders/{orderId} {
      // Пользователь может читать свои заказы
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      // Создавать можно, если userId совпадает
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // Обновлять (например, статус оплаты) - пока разрешим владельцу, но лучше через сервер
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}
